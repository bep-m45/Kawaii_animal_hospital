<div class="flame-top"></div>
<h1>カテゴリー編集画面</h1>
<div class="containers">
  <div class="sidebar-left"></div>
  <div class="main-container">
    <div class="box">
      <%= form_with model: @category, local: true do |f| %>
        <%= f.label :name, "カテゴリー名" %>
        <%= f.text_field :name %>
        <%= f.submit "保存" %>
      <% end %>
    </div>
  </div>
  <div class="sidebar-right"></div>
</div>